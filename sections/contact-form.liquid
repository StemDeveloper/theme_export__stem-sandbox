          "label": "t:sections.rich-text.blocks.heading.settings.blur_strength.label",
          "default": 3,
          "unit": "px",
          "step": 1,
          "max": 10,
          "min": 1
        },
        {
          "type": "select",
          "id": "heading_alignment",
          "label": "t:sections.collapsible_content.settings.heading_alignment.label",
          "options": [
            {
              "value": "left",
              "label": "t:sections.collapsible_content.settings.heading_alignment.options__1.label"
            },
            {
              "value": "center",
              "label": "t:sections.collapsible_content.settings.heading_alignment.options__2.label"
            },
            {
              "value": "right",
              "label": "t:sections.collapsible_content.settings.heading_alignment.options__3.label"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "full_width_block",
          "label": "t:sections.carousel.settings.full_width.label",
          "options": [
            {
              "value": "none",
              "label": "t:sections.carousel.settings.full_width.options__1.label"
            },
            {
              "value": "container",
              "label": "t:sections.carousel.settings.full_width.options__2.label"
            },
            {
              "value": "device",
              "label": "t:sections.carousel.settings.full_width.options__3.label"
            }
          ],
          "default": "none"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "scheme-1"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.rich-text.blocks.text.name",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "t:sections.rich-text.blocks.text.settings.text.default",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "options": [
            {
              "value": "left",
              "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
            },
            {
              "value": "center",
              "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
            },
            {
              "value": "right",
              "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
            }
          ],
          "default": "center",
          "label": "t:sections.rich-text.settings.content_alignment.label"
        },
        {
          "type": "select",
          "id": "full_width_block",
          "label": "t:sections.carousel.settings.full_width.label",
          "options": [
            {
              "value": "none",
              "label": "t:sections.carousel.settings.full_width.options__1.label"
            },
            {
              "value": "container",
              "label": "t:sections.carousel.settings.full_width.options__2.label"
            },
            {
              "value": "device",
              "label": "t:sections.carousel.settings.full_width.options__3.label"
            }
          ],
          "default": "none"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "scheme-1"
        },
        {
          "type": "checkbox",
          "id": "sticky_block",
          "label": "t:sections.contact-form.blocks.text.settings.sticky_block.label",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
